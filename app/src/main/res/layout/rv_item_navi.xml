<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:background="?android:attr/selectableItemBackground"

>

    <ImageView android:layout_width="50dp" android:layout_height="50dp"
               android:src="@mipmap/ic_launcher"
               android:scaleType="fitXY"
               android:layout_marginTop="@dimen/app_margin_top"
               android:id="@+id/ivTop"

    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="排行榜"
              android:textSize="@dimen/small_text_size"
              android:textColor="@color/design_text_black"
              android:layout_marginTop="@dimen/app_margin_small"
              android:layout_marginBottom="@dimen/app_margin_top"
              android:id="@+id/tvTitle"


    />


</LinearLayout>